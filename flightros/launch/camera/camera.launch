<launch>
    <arg name="debug" default="0" />
    <arg name="use_unity_editor" default="false" />
    <arg name="dist" default="_default_text_" />

    <!-- RPG Flightmare Unity Render. -->
    <node pkg="flightrender" type="RPG_Flightmare.x86_64" args="-profiler-maxusedmemory 500000000" name="rpg_flightmare_render" unless="$(arg use_unity_editor)">
    </node>

    <node name="camera" pkg="flightros" type="camera" output="screen" launch-prefix="gdb -ex run --args" if="$(arg debug)">
    </node>

    <node name="camera" pkg="flightros" type="camera" args="$(arg dist)" output="screen" required="true" unless="$(arg debug)">
    </node>

</launch>